<view class="record">
  <view class="up">
    <textarea name="en" cols="25" rows="4" readonly model:value="{{value}}" />
    </view>
  <view class="pig">
    <image src="cloud://yun-74jba.7975-yun-74jba-1259601148/pig2.jpg" wx:if="{{true}}"/>
    <image src="cloud://yun-74jba.7975-yun-74jba-1259601148/pig.gif" wx:else/>
  </view>
  <view class="down">
    <view class="switch">
      <van-icon name="{{icon}}" size="80rpx" bindtap="vary"/>
    </view>
    <view class="in" wx:if="{{i}}">
      <input type="text" name="Name" class="input" model:value="{{inputing}}"/>
      <button class="btn" bindtap="send">确认</button>
    </view>
    <view class="button" wx:else>
      <button hover-class="putButton" bindlongpress='longpress' bindtouchend="leave">长按开始录音</button>
    </view>
  </view>
</view>